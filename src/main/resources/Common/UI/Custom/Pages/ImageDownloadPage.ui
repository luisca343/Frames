$C = "../Common.ui";

$C.@PageOverlay {
    $C.@DecoratedContainer {
        Anchor: (Width: 650, Height: 420);

        #Title {
            $C.@Title { @Text = "Picture Frame"; }
        }

        #Content {
            LayoutMode: Top;
            Padding: (Full: 20);

            Group { Anchor: (Height: 12); }

            Group {
                LayoutMode: Left;
                Anchor: (Height: 52);

                Label {
                    Text: "Name:";
                    Anchor: (Width: 80);
                    Style: (FontSize: 15, TextColor: #96a9be, VerticalAlignment: Center, RenderBold: true);
                }

                $C.@TextField #NameInput {
                    FlexWeight: 1;
                    Anchor: (Height: 44);
                    Padding: (Horizontal: 12);
                    Background: #0f1621;
                    PlaceholderText: "Enter image name...";
                }
            }

            Group { Anchor: (Height: 12); }

            Group {
                LayoutMode: Left;
                Anchor: (Height: 52);

                Label {
                    Text: "URL:";
                    Anchor: (Width: 80);
                    Style: (FontSize: 15, TextColor: #96a9be, VerticalAlignment: Center, RenderBold: true);
                }

                $C.@TextField #UrlInput {
                    FlexWeight: 1;
                    Anchor: (Height: 44);
                    Padding: (Horizontal: 12);
                    Background: #0f1621;
                    PlaceholderText: "https://example.com/image.png";
                }
            }

            Group { Anchor: (Height: 12); }

            Group {
                LayoutMode: Left;
                Anchor: (Height: 52);

                Label {
                    Text: "Size X (blocks):";
                    Anchor: (Width: 140);
                    Style: (FontSize: 15, TextColor: #96a9be, VerticalAlignment: Center, RenderBold: true);
                }

                $C.@TextField #SizeXInput {
                    FlexWeight: 1;
                    Anchor: (Height: 44);
                    Padding: (Horizontal: 12);
                    Background: #0f1621;
                    PlaceholderText: "1";
                }

                /* Size Y removed â€” aspect ratio preserved automatically */
            }

            Group { Anchor: (Height: 12); }

            Group {
                LayoutMode: Left;
                Anchor: (Height: 52);

                Label {
                    Text: "Item / State Key:";
                    Anchor: (Width: 140);
                    Style: (FontSize: 15, TextColor: #96a9be, VerticalAlignment: Center, RenderBold: true);
                }

                $C.@TextField #StateKeyInput {
                    FlexWeight: 1;
                    Anchor: (Height: 44);
                    Padding: (Horizontal: 12);
                    Background: #0f1621;
                    PlaceholderText: "Paste item id or state key...";
                }

                Group { Anchor: (Width: 12); }

                TextButton #ChooseButton {
                    Text: "Choose";
                    Anchor: (Width: 120, Height: 44);
                    Style: $C.@SecondaryTextButtonStyle;
                }

                Group { Anchor: (Width: 8); }

                TextButton #ApplyButton {
                    Text: "Apply";
                    Anchor: (Width: 120, Height: 44);
                    Style: $C.@SecondaryTextButtonStyle;
                }
            }

            Group { Anchor: (Height: 14); }

            Group {
                LayoutMode: Left;
                Anchor: (Height: 48);
                Padding: (Left: 0);

                TextButton #UploadButton {
                    Text: "Download / Update";
                    FlexWeight: 1;
                    Anchor: (Height: 36);
                    Style: $C.@DefaultTextButtonStyle;
                }

                Group { Anchor: (Width: 12); }

                TextButton #RemoveButton {
                    Text: "Remove";
                    Anchor: (Width: 160, Height: 36);
                    Style: $C.@CancelTextButtonStyle;
                }
            }

            /* Hidden sentinel DeleteButton so event bindings for Delete resolve at load time */
            TextButton #DeleteButton {
                Text: "";
                Anchor: (Width: 0, Height: 0);
                Visible: false;
            }

            /* States list deprecated and removed from view; kept file for compatibility */
        }
    }
}

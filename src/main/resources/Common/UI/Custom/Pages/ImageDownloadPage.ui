$C = "../Common.ui";

Group {
    Anchor: (Width: 650, Height: 420);
    Background: #1a1a2e(0.96);
    LayoutMode: Top;
    Padding: (Full: 20);

    Label #Title {
        Text: "Picture Frame";
        Anchor: (Height: 36);
        Style: (FontSize: 20, TextColor: #ffffff, HorizontalAlignment: Center, RenderBold: true);
    }

    Group { Anchor: (Height: 12); }

    Group {
        LayoutMode: Left;
        Anchor: (Height: 52);

        Label {
            Text: "Name:";
            Anchor: (Width: 80);
            Style: (FontSize: 15, TextColor: #96a9be, VerticalAlignment: Center, RenderBold: true);
        }

        $C.@TextField #NameInput {
            FlexWeight: 1;
            Anchor: (Height: 44);
            Padding: (Horizontal: 12);
            Background: #0f1621;
            PlaceholderText: "Enter image name...";
        }
    }

    Group { Anchor: (Height: 12); }

    Group {
        LayoutMode: Left;
        Anchor: (Height: 52);

        Label {
            Text: "URL:";
            Anchor: (Width: 80);
            Style: (FontSize: 15, TextColor: #96a9be, VerticalAlignment: Center, RenderBold: true);
        }

        $C.@TextField #UrlInput {
            FlexWeight: 1;
            Anchor: (Height: 44);
            Padding: (Horizontal: 12);
            Background: #0f1621;
            PlaceholderText: "https://example.com/image.png";
        }
    }

    Group { Anchor: (Height: 12); }

    Group {
        LayoutMode: Left;
        Anchor: (Height: 52);

        Label {
            Text: "Size X (blocks):";
            Anchor: (Width: 140);
            Style: (FontSize: 15, TextColor: #96a9be, VerticalAlignment: Center, RenderBold: true);
        }

        $C.@TextField #SizeXInput {
            FlexWeight: 1;
            Anchor: (Height: 44);
            Padding: (Horizontal: 12);
            Background: #0f1621;
            PlaceholderText: "1";
        }

        /* Size Y removed â€” aspect ratio preserved automatically */
    }

    Group { Anchor: (Height: 12); }

    Group {
        LayoutMode: Left;
        Anchor: (Height: 52);

        Label {
            Text: "Item / State Key:";
            Anchor: (Width: 140);
            Style: (FontSize: 15, TextColor: #96a9be, VerticalAlignment: Center, RenderBold: true);
        }

        $C.@TextField #StateKeyInput {
            FlexWeight: 1;
            Anchor: (Height: 44);
            Padding: (Horizontal: 12);
            Background: #0f1621;
            PlaceholderText: "Paste item id or state key...";
        }

        TextButton #ApplyButton {
            Text: "Apply";
            Anchor: (Width: 120, Height: 36);
            Style: $C.@DefaultTextButtonStyle;
        }
    }

    Group { Anchor: (Height: 14); }

    Group {
        LayoutMode: Left;
        Anchor: (Height: 48);
        Padding: (Left: 0);

        TextButton #UploadButton {
            Text: "Upload";
            FlexWeight: 1;
            Anchor: (Height: 36);
            Style: $C.@DefaultTextButtonStyle;
        }

        Group { Anchor: (Width: 12); }

        TextButton #RemoveButton {
            Text: "Remove";
            Anchor: (Width: 160, Height: 36);
            Style: $C.@CancelTextButtonStyle;
        }
    }

    /* Hidden sentinel DeleteButton so event bindings for Delete resolve at load time */
    TextButton #DeleteButton {
        Text: "";
        Anchor: (Width: 0, Height: 0);
        Visible: false;
    }

    /* States list deprecated and removed from view; kept file for compatibility */
}
